.container{
    background: #f9f9f9;
}
.cate-nav{
    position: fixed;
    left:0;
    top:0;
    z-index: 1000;
}

.cate-nav-body{
    height: 84rpx;
    white-space: nowrap;   
    background: #fff;
    border-top: 1px solid rgba(0,0,0,.15);
    overflow: hidden;
}

.cate-nav .item{
    display: inline-block;
    height: 84rpx;
    min-width: 130rpx;
    padding: 0 15rpx;
    
}

.cate-nav .item .name{
    display: block;
    height: 84rpx;
    padding: 0 20rpx;
    line-height: 84rpx;
    color: #333;
    font-size: 30rpx;
    width: auto;
}

.cate-nav .item.active .name{
    color:#31C27C;
    border-bottom: 2px solid #31C27C;
}


.cate-item{
    margin-top: 180rpx;
    height: auto;
    overflow: hidden;
}
.hidden{
  width :100%;
  height: 20rpx;
  background-color: #fff;
  position: fixed;
  top: 80rpx;

  

}
.cate-item .menu{
  position: fixed;
  top: 100rpx;
  left:2.5%;
  
  width:95%;
  margin:0 auto;
  display:flex;
  height: 60rpx;
  margin-bottom: 15rpx;
}
.cate-item .menu .list-menu{
  flex:1;
  background-color: #fff;
  border:1rpx solid #31C27C;
  color: #000;
  text-align: center;
  line-height: 60rpx;
}
.cate-item .menu .cur{
  /* background-color: #31C27C; */
  color: #31C27C;
}
.by-price{
    background: url(//yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/no-3127092a69.png) 155rpx center no-repeat;
    background-size: 15rpx 21rpx;
}

.cur.asc{
    background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/up-636b92c0a5.png) 155rpx center no-repeat;
    background-size: 15rpx 21rpx;
}

.cur.desc{
    background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/down-95e035f3e5.png) 155rpx center no-repeat;
    background-size: 15rpx 21rpx;
}

.cate-item .h{
    height: 145rpx;
    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.cate-item .h .name{
    display: block;
    height: 35rpx;
    margin-bottom: 18rpx;
    font-size: 30rpx;
    color: #333;
}

.cate-item .h .desc{
    display: block;
    height: 24rpx;
    font-size: 24rpx;
    color: #999;
}

.cate-item .b{
  width: 750rpx;
  padding: 0 6.25rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .b .item{
  width: 95%;
  margin:0 auto;
  margin-bottom: 30rpx;
  overflow: hidden;
  height:250rpx; 
  display: flex;
  background-color: #fff;

}
.cate-item .b .noMore{
  text-align: center;
}
.cate-item .b .courseImg{
  flex:2;
}
.cate-item .b .courseImg image{
  width:100%;
  height:100%;

}
.cate-item .b .courseContent{
  flex:5;
  overflow: hidden;
  padding:0 15rpx 0 15rpx;
}
.cate-item .b .courseContent .coursetitle{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  font-weight: bold;
  display: block;
}
.cate-item .b .courseContent .course{
  display: inline-block;
  margin-right: 30rpx;
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #ccc;
}
.cate-item .b .courseContent .courseprice{
  color:#b4282d;
  float: right;
}
.cate-item .b .courseContent .description{
  display: flex;
  margin-top: 10rpx;
 
}
.cate-item .b .courseContent .descriptionleft{
  flex:1;
  color:#666;
  font-size: 25rpx;
}
.cate-item .b .courseContent .descriptionright{
  flex:3;
  color:#666;
  font-size: 25rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}

/* .cate-item .b .item-b{
  margin-left: 6.25rpx;
} */

.cate-item .item .img{
  width: 302rpx;
  height: 302rpx;
}

.cate-item .item .name{
  display: block;
  width: 365.625rpx;
  height: 35rpx;
  margin: 11.5rpx 0 22rpx 0;
  text-align: center;
  overflow: hidden;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
}

.cate-item .item .price{
  display: block;
  width: 365.625rpx;
  height: 30rpx;
  text-align: center;
  font-size: 30rpx;
  color: #b4282d;
}