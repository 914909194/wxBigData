.container{
  background:#fff;
}
.joinActivityInfo{
  width:750px;
  height:400rpx;
  position: relative;
}
.joinActivityInfo .rai-image image{
  display:block;
  width:750rpx;
  height:400rpx;
  position: absolute;
  left:0;
  top:0;
} 
.joinActivityInfo .rai-texts{
  width:710rpx;
  height:auto;
  position:absolute;
  top:50rpx;
  left:0;
  text-align:center;
}
.rai-texts text{
  display:block;
  font-size: 30rpx;
  color:#fff; 
  margin-bottom: 20rpx;
}
.rai-texts .jointitle{
  font-size:35rpx;
  overflow:hidden;
}
.rai-texts .joinprice{
  color:skyblue;
}
.joinHead text{
   display:block;
   font-size: 35rpx;
   color:blue;
}
.joinHead text.join-title{
   margin-left:10rpx;
}
.joinHead text.join-cancel{
   margin-right:10rpx;
}
.form{
  display:block;
  background:#fff;
  padding:20rpx 40rpx 20rpx 40rpx;
  margin-bottom: 80rpx;
}
.form .view_item{
  margin-top:20rpx;
}
.form input{
  margin-top:15rpx;
  border:1px solid #D8D5D0;
  border-radius: 8rpx;
  padding-left:10rpx;
  height: 1.8rem;
  line-height: 1.8rem;
}

.form .necessary{
  color:#FF972B;
  margin-left:10rpx;
}

.form .joinPay{
  z-index: 10;
  width:100%;
  height:80rpx;
  background:#79CEF7;
  line-height:80rpx;
  text-align:center;
  font-size: 40rpx;
  color:#fff;
  position:fixed;
  bottom:0;
  left:0;
}
.form .view_item .infoInput{
  color:#D8D5D0;
  font-size: 25rpx;

}